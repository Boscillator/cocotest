# Non-Functional Quick Sort:
def qsort1(l):
    """Non-Functional Quick Sort."""
    if len(l) == 0:
        return []
    else:
        split = l.pop(0)
        smalls = []
        larges = []
        for x in l:
            if x <= split:
                smalls.append(x)
            else:
                larges.append(x)
        return qsort(smalls) + [split] + qsort(larges)

# Functional Quick Sort:
def qsort2(l):
    """Functional Quick Sort."""
    if len(l) == 0:
        return []
    else:
        head, tail = l[0], l[1:]
        return [x if x <= head for x in tail] + [head] + [x if x > head for x in tail]

# Iterator Quick Sort:
def qsort3(l):
    """Iterator Quick Sort."""
    try:
        head, tail = next(l)
        return (x if x <= head for x in tail) :: iter([head]) :: (x if x > head for x in tail)
    except StopIteration:
        return iter([])

# Infinite Iterators:
@recursive
def repeat(elem):
    """Repeat Iterator."""
    yield elem
    repeat(elem)
@recursive
def N(n=0):
    """Natural Numbers."""
    yield n
    N(n+1)
